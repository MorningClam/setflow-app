rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthed() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isAuthed() && request.auth.uid == userId;
    }

    // --- COLLECTIONS ---

    // 1. PUBLIC PROFILES
    // Everyone can read basic info (name, bio, photo) for the app to work.
    // Only the owner can write to it.
    match /users/{userId} {
      allow read: if isAuthed();
      allow write: if isOwner(userId); 
    }

    // 2. PRIVATE DATA (New Security Layer)
    // Strictly restricted. Only the owner can read or write this.
    // Stores: email, paymentMethodLast4, phone, etc.
    match /users/{userId}/private/data {
      allow read, write: if isOwner(userId);
    }

    // Gigs: Public Read, Owner Write
    match /gigs/{gigId} {
      allow read: if isAuthed();
      allow create: if isAuthed();
      allow update, delete: if isAuthed() && resource.data.ownerId == request.auth.uid;
    }

    // Applications: Applicant or Gig Owner ONLY
    match /applications/{appId} {
      allow read: if isAuthed() && (
        resource.data.userId == request.auth.uid || 
        get(/databases/$(database)/documents/gigs/$(resource.data.gigId)).data.ownerId == request.auth.uid
      );
      allow create: if isAuthed() && request.resource.data.userId == request.auth.uid;
      allow update: if false; // Immutable
    }

    // Chat & Messages
    match /conversations/{convoId} {
      allow read, write: if isAuthed();
    }
    
    match /conversations/{convoId}/messages/{msgId} {
      allow read, write: if isAuthed();
    }

    // Marketplace (Gear, Posts)
    match /gear_listings/{id} { allow read, write: if isAuthed(); }
    match /player_posts/{id} { allow read, write: if isAuthed(); }
    match /jam_sessions/{id} { allow read, write: if isAuthed(); }
    
    match /calendarEvents/{id} { 
      allow read, update, delete: if isAuthed() && resource.data.userId == request.auth.uid;
      allow create: if isAuthed() && request.resource.data.userId == request.auth.uid;
    }
    
    match /bands/{id} { allow read, write: if isAuthed(); }
    match /reviews/{id} { allow read, write: if isAuthed(); }
    
    // Default Fallback
    match /{document=**} {
      allow read, write: if isAuthed();
    }
  }
}